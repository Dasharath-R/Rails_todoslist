<p id="notice"><%= notice %></p>



<table class = 'table table-striped' >
  <thead class= 'thead-dark'>
    <tr>
      <th>Todo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todoslists.each do |todoslist| %>
      <tr>
        <td><%= todoslist.title %></td>
        <td><%= todoslist.description %></td>
        <td><%= link_to 'Edit', edit_todoslist_path(todoslist) ,class:'btn btn-sm btn-primary'%></td>
        <td><%= link_to 'Delete', todoslist, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Todo', new_todoslist_path , class:"btn btn-sm btn-secondary"%>




